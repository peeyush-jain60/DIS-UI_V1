<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".dish_select">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/title_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_alignBottom="@id/imageView"
            android:padding="16dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
             />

        <TextView
            android:id="@+id/subheading_detail"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:padding="16dp"
            android:text="@string/subheading"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/subheading_detail"
            android:layout_marginTop="-19dp"
            android:paddingLeft="16dp"
            android:paddingTop="5dp"
            android:text="@string/subtitle_detail_text"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/rating_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/info_detail"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="240dp"
            android:layout_marginBottom="17dp"
            android:adjustViewBounds="true"
            android:maxWidth="80sp"
            android:maxHeight="60sp" />

        <TextView
            android:id="@+id/text_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_detail"
            android:padding="10sp"
            android:text="List of Dishes"
            android:textColor="#000000"
            android:textSize="30sp" />

        <ListView
            android:id="@+id/android:list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_list" />
    </RelativeLayout>
</ScrollView>